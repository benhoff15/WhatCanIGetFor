{
  "version": 2,
  "builds": [
    {
      "src": "backend/hono.ts",
      "use": "@vercel/node",
      "config": {
        "zeroConfig": true,
        "includeFiles": ["prisma/schema.prisma"],
        "runtime": "nodejs18.x"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/hono.ts"
    }
  ]
}
