{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/": ["./"]
    }
  },
  "include": [
    "api/**/*",
    "backend/**/*",
    "lib/**/*",
    "types/**/*",
    "expo-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".expo",
    "dist",
    "build"
  ]
}
